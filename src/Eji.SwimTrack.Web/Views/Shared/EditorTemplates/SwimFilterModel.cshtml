@model Eji.SwimTrack.Web.Models.SwimFilterModel
@using Eji.SwimTrack.Service.Models.Common;

<div class="row">
    <div class="col-sm-12">
        <form asp-action="Index" asp-controller="Swim" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Stroke" class="control-label"></label>
                <select asp-for="Stroke" asp-items="Html.GetEnumSelectList<Stroke>()" class="form-control"  ></select>
                <span asp-validation-for="Stroke" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Filter" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

