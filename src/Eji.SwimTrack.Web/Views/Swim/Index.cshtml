@using Eji.SwimTrack.Service.Models;
@{
    ViewData["Title"] = "Swims";
}

<div class="row">
    <div class="col-sm-12">
        @{
        IEnumerable<SwimData>
            swimData = ViewBag.Data;
            }
            @( Html
            .Grid(swimData)
            .Named("swims")
            .Build(columns =>
            {
                columns.Add(model => model.SwimDate).Titled("Date");
                columns.Add(model => model.Distance).Titled("Distance");
                columns.Add(model => model.DistanceUnits).Titled("Meters/Yards");
                columns.Add(model => model.TimeSeconds).Titled("Seconds");
                columns.Add(model => model.ShortCourse).Titled("Short Course");
                columns.Add(model => model.Completed).Titled("Completed");
            }).Sortable()
            .Pageable()
            )
    </div>
</div>

